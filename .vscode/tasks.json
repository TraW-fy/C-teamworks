{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: finance_manager (all files)",
            "type": "shell",
            "command": "C:\\C++\\Codeblock\\CodeBlocks\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\C++teamwork\\*.cpp",
                "-o",
                "${workspaceFolder}\\C++teamwork\\finance_manager.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\C++teamwork"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\C++\\Codeblock\\CodeBlocks\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
